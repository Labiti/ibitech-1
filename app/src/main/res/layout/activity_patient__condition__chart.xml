<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient_Condition_Chart">
    <TextView
        android:id="@+id/Patient_Conditions"
        android:paddingTop="25dp"
        android:textStyle="bold"
        android:textColor="@color/starBlue"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="My  Condition" />

    <TextView
        android:id="@+id/patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        android:hint="Patient Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignTop="@+id/patientName"
        android:layout_marginEnd="33dp"
        android:hint="Date"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/tvDate"
        android:layout_alignParentRight="true"
        android:layout_marginRight="33dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_below="@id/Patient_Conditions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    >
</RelativeLayout>